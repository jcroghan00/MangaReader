<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MangaReader.Views.SearchResult"
             Loaded="OnViewLoaded">

    <Border x:Name="resultBorder" StrokeThickness="0" Stroke="{DynamicResource fgColor}" BackgroundColor="{DynamicResource fgColor}" StrokeShape="RoundRectangle 10" Padding="10, 10, 10, 10">
        <Border.GestureRecognizers>
            <PointerGestureRecognizer PointerEntered="OnPointerEnterResult" PointerExited="OnPointerExitResult"/>
        </Border.GestureRecognizers>
        <Border.Shadow>
            <Shadow Radius="15"/>
        </Border.Shadow>
    </Border>
</ContentView>
