<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MangaReader"
             x:Class="MangaReader.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="bgColor">#1e1e1e</Color>
            <Color x:Key="fgColor">#424242</Color>
            <Color x:Key="hlColor">#292929</Color>
            <Color x:Key="suggestiveBgColor">#ffa412</Color>
            <Color x:Key="eroticaBgColor">#ad0c0c</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
