<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MangaReader.ChapterPage"
             Title="ChapterPage"
             x:Name="contentPage"
             BackgroundColor="{DynamicResource bgColor}">

    <ScrollView x:Name="scrollView">
        <Grid>
            <Grid x:Name="imageGrid" ColumnDefinitions="*, Auto, *" RowDefinitions="Auto, *" Margin="0,0,0,50">
                <Grid RowDefinitions="Auto" ColumnDefinitions="*, Auto, *" Margin="0, 10, 0, 10" Grid.Column="1">
                    <Label x:Name="chapterLabel" HorizontalOptions="Start" FontSize="20" Grid.Column="0"/>
                    <Label x:Name="numberLabel" HorizontalOptions="Center" FontSize="20" Grid.Column="1"/>
                    <Label x:Name="groupLabel" HorizontalOptions="End" FontSize="20" Grid.Column="2"/>
                </Grid>
            </Grid>
            <Grid x:Name="buttonGrid" ColumnDefinitions="*, *"/>
        </Grid>
    </ScrollView>
</ContentPage>